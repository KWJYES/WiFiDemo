<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button

        android:text="服务端"
        android:backgroundTint="@color/teal_700"
        android:id="@+id/severMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="客户端"
        android:backgroundTint="#818181"
        android:id="@+id/clientMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/severMode" />

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/clientModeESP8266"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3949AB"
        android:text="基于WiFi模块ESP8266客户端"
        app:layout_constraintTop_toBottomOf="@+id/clientMode" />

</androidx.constraintlayout.widget.ConstraintLayout>